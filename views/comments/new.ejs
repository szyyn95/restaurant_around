<div class="container">
    <div class="jumbotron" align="center">
        <h1>Post Your Comment Here</h1>
        <form action="/restaurants/<%= restaurant._id %>/comments" method="POST">
            <div class="form-group">
                <textarea class="form-control long-input" rows="2" name="comment[content]" placeholder="Write something here"></textarea>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success">Submit</button>
            </div>
            <a href="/restaurants/<%= restaurant._id %>">Go Back</a>
        </form>
    </div>
</div>

