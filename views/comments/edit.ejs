<% include ../partials/header.ejs %>

<div class="container">
    <h1>Edit Your Comment Here</h1>
    
    <form action="/restaurants/<%= restaurant_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <textarea class="form-control long-input" rows="2" name="comment[content]" value="<%= comment.content %>"></textarea>
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-success">Submit</button>
        </div>
        <a href="/restaurants/<%= restaurant_id %>">Go Back</a>
    </form>
    
</div>

