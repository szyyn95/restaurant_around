<% include ../partials/header.ejs %>

<div class="container">
    <h1>Edit Profile of <%= restaurant.name %></h1>
    
    <form action="/restaurants/<%= restaurant._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input class="form-control long-input" type="text" name="restaurant[name]" placeholder="Restaurant Name" value="<%= restaurant.name %>">
        </div>
        <div class="form-group">
            <input class="form-control long-input" type="text" name="restaurant[image]" placeholder="Restaurant Image URL" value="<%= restaurant.image %>">
        </div>
        <div class="form-group">
            <input class="form-control long-input" type="text" name="restaurant[location]" id="location" placeholder="Restaurant Address" value="<%= restaurant.location %>">
        </div>
        <div class="form-group">
            <select class="form-control long-input" name="restaurant[tag]">
                <option value="American">American</option>
                <option value="Mexican">Mexican</option>
                <option value="Italian">Italian</option>
                <option value="Indian">Indian</option>
                <option value="Bar">Bar</option>
                <option value="Chinese">Chinese</option>
                <option value="Japanese">Japanese</option>
                <option value="Korean">Korean</option>
                <option value="Fast Food">Fast Food</option>
                <option value="French">French</option>
                <option value="Kosher">Kosher</option>
                <option value="Greek">Greek</option>
                <option value="Mediterranean">Mediterranean</option>
                <option value="Other">Other</option>
            </select>
        </div>
        <div class="form-group">
                <select class="form-control long-input" name="restaurant[price]">
                    <option value="Below 10$">Below 10$</option>
                    <option value="10$-30$">10$-30$</option>
                    <option value="30$-50$">30$-50$</option>
                    <option value="Above 50$">Above 50$</option>
                </select>
            </div>
        <div class="form-group">
            <input class="form-control large-input" type="text" name="restaurant[description]" placeholder="Describe this restaurant here" value="<%= restaurant.description %>">
        </div>
        <div class="form-group">
            <button class="btn btn-lg btn-success">Submit</button>
        </div>
        <a href="/restaurants">Go Back</a>
    </form>
    
</div>

<% include ../partials/footer.ejs %>