<% include partials/header.ejs %>

<div class="container">
    <div class="jumbotron" align="center">
        <h1>Register as a New User</h1>
        <form action="/register" method="POST">
            <div class="form-group">
                <input class="short-input" type="text" name="username" placeholder="Username" required>
            </div>
            <div class="form-group">
                <input class="short-input" type="password" name="password" placeholder="Password" required>
            </div>
            <div class="form-group">
                <input class="short-input" type="password" name="password_confirm" placeholder="Reconfirm password" required>
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success">Register</button>
            </div>
        </form>
    </div>
</div>
    
