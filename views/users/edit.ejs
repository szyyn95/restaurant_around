<% include ../partials/header.ejs %>

<div class="container">
    <div class="jumbotron" align="center">
        <h1>Edit Your Profile</h1>
        <form action="/users/<%= user._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="short-input" type="text" name="user[firstname]" value="<%= user.firstname || "" %>">
            </div>
            <div class="form-group">
                <input class="short-input" type="text" name="user[lastname]" value="<%= user.lastname || "" %>">
            </div>
            <div class="form-group">
                <input class="short-input" type="text" name="user[email]" value="<%= user.email || "" %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success short-input">Update</button>
            </div>
        </form>
    </div>
</div>

<% include ../partials/footer.ejs %>